apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: kube-system
spec:
  valuesContent: |-
    deployment:
      replicas: 3
    resources:
      requests:
        cpu: "1"        # Triggers exclusive CPU pinning
        memory: "512Mi"
      limits:
        cpu: "1"        # Matches request for Guaranteed QoS
        memory: "512Mi"
    topologySpreadConstraints:
      - maxSkew: 1
        topologyKey: kubernetes.io/hostname
        whenUnsatisfiable: DoNotSchedule
        labelSelector:
          matchLabels:
            app.kubernetes.io/name: traefik
    ports:
      web:
        hostPort: 80
        expose: true
      websecure:
        hostPort: 443
        expose: true
    service:
      type: ClusterIP  # No external LoadBalancer needed with hostPort